  <!-- STYLES -->

  <style name="DankPreferencesGroupTitle">
    <item name="android:layout_marginBottom">@dimen/spacing12</item>
    <item name="android:layout_marginEnd">@dimen/spacing16</item>
    <item name="android:layout_marginStart">@dimen/spacing16</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">@dimen/textsize12</item>
  </style>

  <style name="DankPreferencesGroupTitle.WithTopSpacing">
    <item name="android:layout_marginTop">@dimen/spacing24</item>
  </style>

  <style name="DankPreferenceItemDescription">
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="android:textSize">@dimen/textsize14</item>
    <item name="android:layout_marginStart">@dimen/userprefs_item_padding</item>
    <item name="android:layout_marginEnd">@dimen/userprefs_item_padding</item>
  </style>

  <style name="DankPreferenceItemTitle">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/textsize14</item>
    <item name="android:layout_marginStart">@dimen/userprefs_item_padding</item>
    <item name="android:layout_marginEnd">@dimen/userprefs_item_padding</item>
  </style>

  <style name="DankPreferencesSeparator" parent="DankSeparator.VerticalContent">
    <item name="android:background">@color/black_opacity_10</item>
    <item name="android:layout_marginTop">@dimen/userprefs_item_padding</item>
  </style>

  <style name="DankPreferenceGroupSummary">
    <item name="android:layout_marginBottom">@dimen/spacing12</item>
    <item name="android:layout_marginEnd">@dimen/spacing24</item>
    <item name="android:layout_marginStart">@dimen/spacing16</item>
    <item name="android:lineSpacingExtra">2dp</item>
    <item name="android:textColor">@color/white_opacity_50</item>
  </style>

  <style name="DankUserPreferenceButton">
    <item name="android:clickable">true</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:background">@color/window_background</item>
    <item name="android:translationZ">1dp</item>
    <item name="android:paddingTop">@dimen/userprefs_item_padding</item>
  </style>

  <style name="DankUserPreferenceDraggable" parent="DankUserPreferenceButton">
    <!--<item name="android:clickable">false</item>-->
  </style>

  <!-- DIMENS -->

  <dimen name="userprefs_item_padding">@dimen/spacing16</dimen>
  <dimen name="userprefs_item_padding_for_preference_popups">@dimen/spacing12</dimen>

  <!-- ATTRS -->

  <declare-styleable name="UserPreferenceButtonView">
    <attr name="prefbutton_title" format="string" />
    <attr name="prefbutton_summary" format="string" />
  </declare-styleable>

  <declare-styleable name="UserPreferenceSwitchView">
    <attr name="prefswitch_title" format="string" />
    <attr name="prefswitch_summary" format="string" />
  </declare-styleable>
</resources>
